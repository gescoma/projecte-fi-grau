// https://github.com/microsoft/vscode-dev-containers/tree/v0.245.0/containers/alpine
{
	"name": "Edelweiss",
	// "build": {
	// 	"dockerfile": "Dockerfile",
	// 	// Update 'VARIANT' to pick an Alpine version: 3.13, 3.14, 3.15, 3.16
	// 	"args": {
	// 		"VARIANT": "3.17"
	// 	}
	// },
	"dockerComposeFile": "docker-compose.yml",
	"service": "application",
	"mounts": [
		"source=edelweiss-volume,target=/workspace,type=volume"
	],
	"workspaceFolder": "/workspace",
	"shutdownAction": "stopCompose",
	"forwardPorts": [
		3000,
		8080
	],
	"portsAttributes": {
		"3000": {
			"label": "Javascript webApp"
		},
		"8080": {
			"label": "phpMyAdmin"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"heybourn.headwind",
				"ms-vsliveshare.vsliveshare",
				"esbenp.prettier-vscode",
				"amatiasq.sort-imports",
				"bradlc.vscode-tailwindcss",
				"pflannery.vscode-versionlens",
				"csstools.postcss",
				"usernamehw.errorlens",
				"mikestead.dotenv"
			]
		},
		"codespaces": {
			"settings": {},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"heybourn.headwind",
				"ms-vsliveshare.vsliveshare",
				"esbenp.prettier-vscode",
				"amatiasq.sort-imports",
				"bradlc.vscode-tailwindcss",
				"pflannery.vscode-versionlens",
				"csstools.postcss",
				"usernamehw.errorlens",
				"mikestead.dotenv"
			]
		}
	},
	"remoteUser": "vscode"
}